#:kivy 2.0.0

<TargetButton>:
    group: 'target'
    on_press: root.update_target_label
    on_release: root.update_target_label

<SourceButton>:
    group: 'source'
    on_press: root.update_source_label
    on_release: root.update_source_label

<ResultDisplay>:
    id: result_label
    text: "Count all the things!"
    size: (self.width, 50)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<DummyDisplay>:
# forces the buttons to make space for the result display
    text: ""
    size: (self.width, 50)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<RootWidget>:
    GridLayout:
        cols: 2
        width: root.width
        height: root.height


        TargetController:
            target_label: target_label
            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: target_label
                    text: "Make what?"

                TargetButton:
                    text: "Gold"
                    background_color: "gold"
                TargetButton:
                    text: "Purple"
                    background_color: "purple"
                TargetButton:
                    text: "Blue"
                    background_color: "blue"
                TargetButton:
                    text: "Green"
                    background_color: "lime"
                TargetButton:
                    text: "White"
                    background_color: "white"
                TargetButton:
                    text: "Black"
                    background_color: "gray"
                DummyDisplay:


        SourceController:
            source_label: source_label
            BoxLayout:
                orientation: 'vertical'

                Label:
                    id: source_label
                    text: "From what?"

                SourceButton:
                    text: "Gold"
                SourceButton:
                    text: "Purple"
                SourceButton:
                    text: "Blue"
                SourceButton:
                    text: "Green"
                SourceButton:
                    text: "White"
                SourceButton:
                    text: "Black"
                DummyDisplay:

    ResultDisplay:
        width: root.width





