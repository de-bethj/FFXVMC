#:kivy 2.0.0

<DummyDisplay>:
# forces the buttons to make space for the result display
    text: ""
    size: (self.width, 50)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<TargetGrouping>:
    id: target_group
    orientation: 'vertical'
    selected: "what?"

<SourceGrouping>:
    orientation: 'vertical'
    selected: "what?"

<TargetButton>:
    group: 'target'

<SourceButton>:
    group: 'source'

<ResultDisplay>:
    id: result_label
    text: "Count all the things!"
    size: (self.width, 50)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<RootWidget>:
    GridLayout:
        cols: 2
        width: root.width
        height: root.height


        TargetGrouping:
            id: target_group
            Label:
                id: target_label
                text: "Make " + target_group.selected

            TargetButton:
                text: "Gold"
                background_color: "gold"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Purple"
                background_color: "purple"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Blue"
                background_color: "blue"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Green"
                background_color: "lime"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "White"
                background_color: "white"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Black"
                background_color: "gray"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            DummyDisplay:


        SourceGrouping:
            id: source_group
            Label:
                id: source_label
                text: "From " + source_group.selected

            SourceButton:
                text: "Gold"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Purple"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Blue"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Green"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "White"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Black"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            DummyDisplay:

    ResultDisplay:
        width: root.width
