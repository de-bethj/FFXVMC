#:kivy 2.0.0

<DummyDisplay>:
# forces the buttons to make space for the result display
    text: ""
    size: (self.width, 50)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<TargetGrouping>:
    id: target_group
    orientation: 'vertical'
    selected: "what?"

<SourceGrouping>:
    orientation: 'vertical'
    selected: "what?"

<TargetButton>:
    group: 'target'

<SourceButton>:
    group: 'source'

<ResultController>:
    size: (self.width, 75)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<ResultDisplay>:
    id: result_label
    text: "Count all the things!"
    size: (self.width, 50)
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        Rectangle:
            pos: self.pos
            size: (self.width, self.height)

<RootWidget>:
    GridLayout:
        cols: 2
        width: root.width
        height: root.height


        TargetGrouping:
            id: target_group
            Label:
                id: target_label
                text: "Make " + target_group.selected

            TargetButton:
                text: "Gold"
                background_color: "gold"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Purple"
                background_color: "purple"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Blue"
                background_color: "blue"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Green"
                background_color: "lime"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "White"
                background_color: "white"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            TargetButton:
                text: "Black"
                background_color: "gray"
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    target_group.selected = output
            DummyDisplay:


        SourceGrouping:
            id: source_group
            Label:
                id: source_label
                text: "From " + source_group.selected

            # The execution of the [background_color] property is correct.
            # But the colors are off so I'm going to have to tweak things.
            # In the meantime I'll just comment the alterations out.
            # --BJD

            SourceButton:
                text: "Gold"
                #background_color: {'normal': '#bd893170', 'down': '#bd8931'} [self.state]
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Purple"
                #background_color: {'normal': '#8473a570', 'down': '#8473a5'} [self.state]
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Blue"
                #background_color: {'normal': '#4194a870', 'down': '#4194a8'} [self.state]
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Green"
                #background_color: {'normal': '#3b875d70', 'down': '#3b875d'} [self.state]
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "White"
                #background_color: {'normal': '#cbcbcb70', 'down': '#cbcbcb'} [self.state]
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            SourceButton:
                text: "Black"
                #background_color: {'normal': '#65656570', 'down': '#656565'} [self.state]
                on_press:
                    output = self.text if self.state == 'down' else "what?"
                    source_group.selected = output
            DummyDisplay:

    ResultController:
        id: result_displ
        width: root.width

        source_color: source_group.selected
        target_color: target_group.selected

        on_target_color: self.findResult()
        on_source_color: self.findResult()

        result_string: "{} {} materials to make 1 {} material"            .format(self.required_mats, self.source_color, self.target_color)

        text: self.line if self.required_mats <= 0 else self.result_string
